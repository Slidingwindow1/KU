// take array equal size, non overlapping 
//Consecutively placed arrays
//Reverse the positions in second set

// mixes each chemical from the first set with the correspondin-placed chemicals of second set

//total vapor rate = sum of the products of respective vapor rates of the chemicals that he mixed from both sets

using System;

class Program
{
    static void Main() {
        int[] x = new int[]{8,0,5,3,9,6};
        int y = x.Length/2;
        
        //Equal size non overlapping consecutive arrays
        int[] xa= new int []{8,0,5};
        int[] xb = new int []{3,9,6};
        
        //Reverse xb
        int xbc = new int[]{6,9,3};
        
        // Multiply the two positions store in array
        int xbcd = new int[xbc.Length]();
        int total = 0;
        for (int i = 0; i < xbc.Length)
         {
          xbcd[i] = xa[i] * xbc[i];
          total += xbcd[i];
          }
        
          
        int z = x + y;

        Console.Write("Sum of x + y = "+ z);

        Console.WriteLine(" {0}, total);
        
        
    }
}
