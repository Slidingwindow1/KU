    bool notAA = false;
    bool notBB = false;
    bool notCC = false;

    while(S.Length==0 || true){
        if (S.Contains("AA")){
            S = S.Replace("AA", "");
        } else {
           notAA = true;
        }

        if(S.Contains("BB")){
            S = S.Replace("BB", "");
        } else {
            notBB = true;
        }

        if(S.Contains("CC")){
            S = S.Replace("CC", "");
        } else {
            notCC = true;
        }

        if(notAA && notBB && notCC){
            break;
        }
        notAA=false;
        notBB=false;
        notCC=false;
    }
    return S;
